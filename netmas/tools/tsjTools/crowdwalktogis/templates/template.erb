<?xml version="1.0" encoding="utf-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2">
  <Document>
    <name>Catalina - gx:Track</name>
    <description>Catalina Island to Long Beach by helicopter.</description>

    <Style id="agent_0">
      <IconStyle>
		<scale>0.6</scale>
		<color>8f00ff00</color>
        <Icon>
          <href>../../images/man.png</href>
        </Icon>
      </IconStyle>
      <LineStyle>
        <color>8fffffff</color>
        <width>6</width>
      </LineStyle>
    </Style>

    <Style id="agent_1">
      <IconStyle>
		<scale>0.6</scale>
		<color>8f00ffff</color>
        <Icon>
          <href>../../images/man.png</href>
        </Icon>
      </IconStyle>
      <LineStyle>
        <color>8fffffff</color>
        <width>6</width>
      </LineStyle>
    </Style>

    <Style id="agent_2">
      <IconStyle>
		<scale>0.6</scale>
		<color>8f0066ff</color>
        <Icon>
          <href>../../images/man.png</href>
        </Icon>
      </IconStyle>
      <LineStyle>
        <color>8fffffff</color>
        <width>6</width>
      </LineStyle>
    </Style>

    <Style id="agent_3">
