	<% placemarks.each do |placemark| %>
    <Placemark>
      <!--<name>#<%= placemark[:name] %></name>-->
      <styleUrl>#agent_<%= placemark[:colorId] %></styleUrl>
	  <gx:Track>
	    <altitudeMode>relativeToGround</altitudeMode>
	    <% placemark[:gxTracks].each do |track| %><when><%= track[:when] %></when>
	    <% end %>
	    <% placemark[:gxTracks].each do |track| %><gx:coord><%= track[:longitude] %> <%= track[:latitude] %> <%= track[:altitude] %></gx:coord>
		<gx:angles>0 0 0</gx:angles>
	    <% end %>
	  </gx:Track>
    </Placemark>
	<% end %>
  </Document>
</kml>


